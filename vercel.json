{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs22.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/aggregate-metrics",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/sync-crm",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/cleanup-old-events",
      "schedule": "0 2 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/webhooks/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}

